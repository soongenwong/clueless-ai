{
  "manifest_version": 3,
  "name": "Clueless AI - Web Assistant",
  "version": "1.0",
  "description": "AI-powered visual guidance for any website",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clueless AI Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shepherd.js", "content-script.js"],
      "css": ["shepherd.css", "content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
